- [:last_name, :first_name, :middle_name, :company, :position, :city, :email, :phone, :skype].each do |attribute|
  %li.form__element
    = f.input attribute, placeholder: User.human_attribute_name(attribute), class: 'user-summary'
%li.form__element
  = f.input :shirt_size, placeholder: User.human_attribute_name(:shirt_size), class: 'user-summary', include_blank: false, collection: [:S, :M, :L, :XL]

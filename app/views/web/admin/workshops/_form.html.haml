= simple_form_for [:admin, @workshop], html: { class: 'form-horizontal' } do |f|

  = f.input :title, input_html: { class: :span6 }
  = f.input :color, placeholder: 'green, yellow, orange, blue, red, purple', input_html: { class: :span6 }
  = f.label :icon
  = f.file_field :icon, input_html: { class: :span6 }

  .form-actions
    = f.button :submit, class: 'btn btn-primary'
    = link_to t('.cancel'), admin_workshops_path, class: 'btn'

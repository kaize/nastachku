= simple_form_for [:admin, @coupon], html: { class: 'form-horizontal' } do |f|
  = f.input :partner
  = f.input :code
  = f.input :discount
  = f.input :commission
  = f.input :url
  = f.input :state_event, as: :state_event

  .form-actions
    = f.button :submit, class: 'btn btn-primary'
    = link_to t('.cancel', default: t("helpers.links.cancel")), admin_coupons_path, class: 'btn'

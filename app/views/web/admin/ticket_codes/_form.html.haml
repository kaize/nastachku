= simple_form_for @ticket_codes_form, url: admin_ticket_codes_path, html: { class: 'form-horizontal' } do |f|
  = f.input :category, collection: @categories, value_method: :first, include_blank: false, label: t('.category')
  = f.input :kind, collection: @kinds, value_method: :last, include_blank: false, label: t('.kind')
  = f.input :distributor_id, collection: @distributors, include_blank: false, label: t('.distributor')
  = f.input :price, label: t('.price')
  = f.input :count, label: t('.count')

  .form-actions
    = f.submit t('.create'), class: 'btn btn-danger', data: { confirm: "Вы уверены? Точно-точно?" }
    = link_to t('.cancel'), admin_ticket_codes_path, class: 'btn'
